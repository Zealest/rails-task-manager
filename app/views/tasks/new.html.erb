<h1>New Task</h1>
<%= form_with model: @task, url: tasks_path do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>
  <%= f.submit "Create Task" %>
<% end %>
<%= link_to 'Back to Task List', tasks_path %>
<%= render 'form', task: @task %>
